# Токен бота от @BotFather
BOT_TOKEN=your_bot_token_here

# Данные для входа в админ-панель
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Данные для входа менеджера
MANAGER_USERNAME=manager
MANAGER_PASSWORD=manager123 

# Flask secret key (для сессий админ-панели)
SECRET_KEY=replace_me_with_random_string

# Вебхук (для деплоя на shared-хостинге через Passenger/WSGI)
# Укажите публичный URL, на который хостинг отдаёт ваше WSGI-приложение
# Пример: https://panel.example.com
PUBLIC_BASE_URL=
# Путь эндпоинта вебхука. Должен совпасть с маршрутом, который примет Telegram
# Пример: /telegram/webhook/<секрет>
WEBHOOK_PATH=/telegram/webhook

# Секрет для валидации запросов Telegram (X-Telegram-Bot-Api-Secret-Token)
WEBHOOK_SECRET=spravuz-secret